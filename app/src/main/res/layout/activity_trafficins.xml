<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.droideye.TrafficMonitor.TrafficInsView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/showtrafficview"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This picture is for joking.-->
    <ImageButton
        android:id="@+id/rudder"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="8dip"
        android:layout_marginTop="6dip"
        android:layout_marginBottom="9dip"
        android:src="@drawable/btn_rudder"
        />

    <ImageButton
        android:id="@+id/ten"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/rudder"
        android:layout_marginLeft="6dip"
        android:src="@drawable/ten"
        />

    <ImageButton
        android:id="@+id/five"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/ten"
        android:layout_marginLeft="3dip"
        android:src="@drawable/five"
        />

    <ImageButton
        android:id="@+id/one"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/five"
        android:layout_marginLeft="3dip"
        android:src="@drawable/one"
        />

    <ListView
        android:id="@+id/trafficList"
        android:layout_below="@id/rudder"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:divider="@null"
        android:scrollbars="none"
        android:layoutAnimation="@anim/anim_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Divider-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#33000000"
        android:layout_above="@id/trafficList"
        />

</com.example.administrator.droideye.TrafficMonitor.TrafficInsView>

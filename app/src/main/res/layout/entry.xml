<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutAnimation="@anim/anim_listview">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="40dp"
        android:text="DroidEye"
        android:textSize="40dp"
        />


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/line"
        android:layout_marginTop="220dp"
        android:background="#515151"
        />

    <ImageButton
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/line"
        android:src="@drawable/monitor"
        android:id="@+id/Monitor"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/wake"
        android:id="@+id/WakeUp"
        android:scaleType="fitCenter"
        android:background="#00000000"
        android:layout_below="@+id/Monitor"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:layout_below="@id/Monitor"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/line3"
        android:background="#515151"
        />

    <ImageButton
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_toRightOf="@+id/Monitor"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:layout_below="@+id/line"
        android:src="@drawable/traffic"
        android:id="@+id/Traffic"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <ImageButton
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_below="@id/Traffic"
        android:layout_toRightOf="@+id/WakeUp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"
        android:src="@drawable/setting"
        android:id="@+id/Setting"
        android:scaleType="fitCenter"
        android:background="#00000000" />

    <TextView
        android:layout_below="@id/WakeUp"
        android:layout_marginTop="25dp"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:id="@+id/line2"
        android:background="#515151"
        />

</RelativeLayout>